<div class="card">
    <img src="{{img}}" class="card-top-img">
    <div class="card-body">
        <div>
            {{#if isHot}}
            <div class="badge rounded-pill bg-warning bg-sm me-2 mb-3">HOT!</div>
            {{/if}}
            {{#if isNew}}
            <div class="badge rounded-pill bg-primary bg-sm mb-3">Нове</div>
            {{/if}}
        </div>
        <div>
            {{#if isFast}}
            <div class="btn btn-success btn-sm me-2 mt-2">Швидка доставка</div>
            {{/if}}
        </div>
        <div>
            {{#if isFree}}
            <div class="btn btn-secondary btn-sm mt-2">Безкоштовна доставка</div>
            {{/if}}
        </div>
        <h5 class="mt-3">{{name}}</h5>
        <div>{{review.amount}} {{review.text}}</div>
        <h4>{{price}}</h4>
        <div class="mb-2">{{delivery}}</div>
        {{#each buttons}}
        <div>
            <a href="{{link}}" class="btn 
                            {{#if isPrimary}}btn-primary{{/if}}
                            {{#if isSecondary}}btn-secondary{{/if}} mt-2">
                {{text}}
            </a>
        </div>
        {{/each}}
        {{#each characteristics}}
        <ul class="mt-3">
            <li class="">{{title}}: {{value}}</li>
        </ul>
        {{/each}}
    </div>
</div>