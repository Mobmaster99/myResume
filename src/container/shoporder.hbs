<main class="p-3">
    {{> nav_shop}}

    <h1 class="m-5 ms-0">{{header}}</h1>
    <div class="row">
        <div class="col-8">
            {{#with contacts_data}}
            <h2 class="mb-3">{{title}}</h2>
            {{#each buttons}}
            <div class="btn {{#if isPrimary}}btn-warning{{/if}} {{#if isOutline}}btn-outline-warning{{/if}} me-2 mb-3">
                {{text}}
            </div>
            {{/each}}
            {{#with form.input}}
            {{> contact_shop}}
            {{/with}}
            <hr class="mb-4">
            {{#each form.switch}}
            <div class="form-check form-switch mt-3 pb-1">
                <label class="form-check-label">{{text}}</label>
                <input name="choose" class="form-check-input" type="checkbox" {{#if isActive}}checked{{/if}}>
            </div>
            {{/each}}
            {{/with}}
            <hr class="mt-4">
            {{#with delivery}}
            <h2 class="mb-3">{{title}}</h2>
            <div class="card pe-1 mb-3">
                <div class="card-body">
                    <div class="row">
                        {{#each select}}
                        <div class="col-6 pe-1 ps-2">
                            <label class="form-label mb-0">{{label}}</label>
                            <select class="form-select">
                                <option selected>{{placeholder}}</option>
                                {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                                {{/each}}
                            </select>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            {{#each delivery_type}}
            <div class="form-check mb-2">
                <label class="form-check-label">{{type}}</label>
                <input name="choose" class="form-check-input" type="radio">
            </div>
            {{/each}}
            <hr class="mt-4 mb-4">
            <h2 class="mb-3">{{payment.title}}</h2>
            {{#each payment.list}}
            <div class="form-check mb-0 mt-2">
                <label class="form-check-label">{{type}}</label>
                <input name="choose" class="form-check-input" type="radio">
            </div>
            <div class="form-text">{{description}}</div>
            {{/each}}
            <hr class="mt-5 mb-4">
            {{#with contact}}
            <h2 class="mb-3">{{title}}</h2>
            {{> contact_shop}}
            {{/with}}
            <hr class="mt-4 mb-4">
            <div>
                <label class="form-label">{{coment.label}}</label>
                <input class="form-control" placeholder="{{coment.placeholder}}">
            </div>
            <hr class="mt-5 mb-4">
            {{/with}}

            {{#with coupon}}
            <h2 class="mb-3">{{title}}</h2>
            <label class="form-label">{{select.availabel_coupon.label}}</label>
            <select class="form-select form-select-lg">
                <option selected>{{select.availabel_coupon.placeholder}}</option>
                {{#each select.availabel_coupon.options}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}
            </select>
            <div class="mb-3">
                <label class="form-label mt-3 mb-0">{{select.friend_coupon.label}}</label>
                <select class="form-select form-select-sm">
                    <option selected>{{select.friend_coupon.placeholder}}</option>
                    {{#each select.friend_coupon.options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
                <div class="form-text mt-0">Caption text, description, error notification</div>
            </div>

            {{#with add}}
            <div>
                <label class="form-label mb-0">{{friend.label}}</label>
                <div>
                    <input class="form-control form-control-lg ps-2" placeholder="{{friend.placeholder}}">
                </div>
                <div class="form-text mt-0">{{friend.caption}}</div>
            </div>
            <div class="mt-3 mb-5">
                <label class="form-label mb-0">{{colleague.label}}</label>
                <div>
                    <input class="form-control ps-2" placeholder="{{colleague.placeholder}}">
                </div>
                <div class="form-text mt-0">{{colleague.caption}}</div>
            </div>
            {{/with}}
            {{/with}}
            <hr class="mt-4 mb-4">

            {{#with quiz}}
            <div>
                <h2 class="mb-3">{{title}}</h2>
                <label class="form-label">{{preference.title}}</label>
                {{#each preference.options}}
                <div class="form-check mb-2">
                    <label class="form-check-label">{{this}}</label>
                    <input name="choose" class="form-check-input" type="radio">
                </div>
                {{/each}}
            </div>
            <div class="mt-4">
                <label class="form-label mb-0">{{your_expirience.label}}</label>
                <input class="form-control">
            </div>
            <div class="mt-3">
                <label class="form-label mb-0">{{purchase_frequency.label}}</label>
                <select class="form-select">
                    <option selected>{{purchase_frequency.placeholder}}</option>
                    {{#each purchase_frequency.options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="mt-3 mb-5">
                <label class="form-label">{{factors.title}}</label>
                <div class="form-check">
                    {{#each factors.options}}
                    <div class="mb-2">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label">{{this}}</label>
                    </div>
                    {{/each}}
                </div>     
            </div>
            {{/with}}
        </div>
        <div class="col-4 ps-0">
            <div class="card pt-2">
                {{#each action_block}}
                <div class="card-body ps-2 pt-0 pb-2">
                    <div
                        class="btn {{#if isSuccess}}btn-success{{/if}} {{#if isDanger}}btn-danger{{/if}} {{#if isInfo}}btn-info{{/if}}">
                        {{text}}
                    </div>
                </div>
                {{/each}}
            </div>
            <div class="card mt-3">
                <div class="card-body p-2 pb-1">
                    <h2 class="card-title">{{total.title}}</h2>
                    {{#each total.item_list}}
                    <div>{{name}}: {{price}}</div>
                    {{/each}}
                    <hr>
                    {{#each total.additional_info}}
                    <div>{{text}}: {{value}}</div>
                    {{/each}}
                    <hr>
                    {{total.total_price.text}}: {{total.total_price.value}}
                    <hr>
                    {{#each total.button}}
                    <div>
                        <div
                            class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isOutline}}btn-outline-primary{{/if}} mb-2">
                            {{text}}
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <hr class="mt-4 mb-0">
    {{> footer_shop}}
</main>