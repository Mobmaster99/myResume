{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <div class="row">
            <section class="col-6">
                {{> title data=summary.title big=true}}
                <div>
                    <p>
                        {{summary.text}}
                    </p>
                </div>
            </section>

            <section class="col-6">
                {{> title data=experience.title}}
                <div>
                    <p>
                        {{experience.text}}
                    </p>
                </div>
            </section>
        </div>
    </main>
    {{/with}}
</div>

