{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        {{#with person}}
        <div>
            <h1>{{name}}</h1>
            <div>вік: ({{age}})</div>
            <div class="mb-4">стать: {{gender}}</div>
            <address>
                {{#with address}}
                {{street}} {{city}} {{state}} {{zip}} {{country}}
                {{/with}}
            </address>
            <hr>
        </div>
        <p>
            <h2>Education</h2>
            {{#each education}}
            <div>{{degree}}</div>
            <div>{{major}}</div>
            <div>{{university}} ({{graduationYear}})</div>
            {{/each}}
        </p>
        <p class="mb-4">
            <h2>Work experience</h2>
            {{#each workExperience}}
                <div>{{company}} ({{year_founded}}) {{industry}}</div>
                <div>{{title}}</div>
                <div>
                    <time>({{startDate}} - {{endDate}})</time>
                </div>
                <div>{{responsibilities}}</div>
                <h3 class="mt-4">Employees</h3>
                <ul>
                    {{#each employees}}
                        <li>
                            <div>{{name}}</div>
                        </li>
                        <div>{{position}}</div>
                        <div>{{department}}</div>
                        <h4 class="mt-4 mb-4">Projects</h4>
                        <ul>
                            {{#each projects}}
                                <li>
                                    <div><b>{{name}}</b></div>
                                </li>
                                <div>{{description}}</div>
                                <div>{{status}}</div>
                                <h5 class="mt-4">Teams</h5>
                                <ul>
                                    {{#each teams}}
                                        <li>
                                            <div><b>{{team_name}}</b></div>
                                        </li>
                                            {{#with team_leader}}
                                                <div>{{name}}</div>
                                                <div>{{title}}</div>
                                                {{> link text=email href=email blank=true noLine=true }}
                                            {{/with}}
                                            <h6 class="mt-4">Team members</h6>
                                            <ul>
                                                {{#each team_members}}
                                                    <li>
                                                        <div>{{name}}</div>
                                                    </li>
                                                    <div>{{title}}</div>
                                                    {{> link text=email href=email blank=true noLine=true }}
                                                    <ul>
                                                        <div class="mt-3">
                                                            {{#each skills}}
                                                                <li>
                                                                    <div>{{this}}</div>
                                                                </li>
                                                            {{/each}}
                                                            
                                                            {{#each projects}}
                                                                <div class="mt-3"><b>{{name}}</b></div>
                                                                <div>{{description}}</div>
                                                                <ul>
                                                                    <div>
                                                                        {{#each technologies}}
                                                                            <li>{{this}}</li>
                                                                        {{/each}}
                                                                        <h6 class="mt-3">Team members</h6>
                                                                        <ul>
                                                                            <div>
                                                                                {{#each team_members}}
                                                                                    <li>
                                                                                        <div>{{name}}</div>
                                                                                    </li>
                                                                                    <div>{{title}}</div>
                                                                                {{/each}}
                                                                            </div>
                                                                        </ul>
                                                                    </div>
                                                                </ul>
                                                            {{/each}}
                                                        </div>
                                                    </ul>
                                                {{/each}}
                                            </ul>
                                    {{/each}}
                                </ul>
                            {{/each}}
                        </ul>
                    {{/each}}
                </ul>
            {{/each}}
        </p>
        {{/with}}
    </main>
</div>

